<h1>User Signup</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    <%= f.label :height %><br>
    <%= f.number_field :height %><br><br>
    <%= f.label :tickets %><br>
    <%= f.number_field :tickets %><br><br>
    <%= f.label :nausea %><br>
    <%= f.number_field :nausea %><br><br>
    <%= f.label :happiness %><br>
    <%= f.number_field :happiness %><br><br>
    <%= f.label :admin, "Check box if you are an amusement park owner." %>
    <%= f.check_box :admin%><br><br>
    <%= f.submit %>
<% end %>