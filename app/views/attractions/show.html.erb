<h1>"Name:" <%= @attraction.name %> </h1>
<h1>"Total Number of Users:" <%=@attraction.users.count %></h1>

<h1>"Ticket Requirement:" <%= @attraction.tickets %></h1>

<h1>"Height Requirement:" <%= @attraction.min_height %> inches</h1>

<h1>"Nausea Rating:"<%=@attraction.nausea_rating%></h1>

<h1>"Happiness Rating:"<%=@attraction.happiness_rating%></h1>


<% if @user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction), class: "btn btn-primary" %>
<% else %>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :attraction_id %>
    <%= f.submit "Go on this ride" %>
    <% end %>
<% end %>