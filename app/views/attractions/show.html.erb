<h1><%= @attraction. name %></h1>
<p>Minimum Height: <%= @attraction.min_height %></p>
<p>Ticket Requirements: <%= @attraction.tickets %></p>
<p>Nausea Rating:<%= @attraction.happiness_rating %></p>
<p>Happiness Rating:<%= @attraction.nausea_rating %></p>






<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.button "Go on this ride"%>
    <% end %>
<% end %>