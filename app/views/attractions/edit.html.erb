<h1>Edit Attraction:</h1>

<%= form_for @attraction do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>

  <%= f.label :nausea_rating %> <br>
  <%= f.number_field :nausea_rating, in: 1..5, step: 1 %> <br>

  <%= f.label :happiness_rating %> <br>
  <%= f.number_field :happiness_rating, in: 1..5, step: 1 %> <br>

  <%= f.label :tickets %> <br>
  <%= f.number_field :tickets, step: 1 %> <br>

  <%= f.label :min_height %> <br>
  <%= f.number_field :min_height, step: 1 %> <br>
  
  <%= f.submit %>
<% end %>