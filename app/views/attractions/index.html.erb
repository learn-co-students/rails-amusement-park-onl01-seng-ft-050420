<h1>Listing attractions</h1>

<% if current_user.admin == true %>
    <% @attractions.each do |a| %>
        <div><%= link_to "Show #{a.name}", attraction_path(a) %></div>
    <% end %>
<% else %>
    <% @attractions.each do |a| %>
        <div><%= link_to "Go on #{a.name}", attraction_path(a) %></div>
    <% end %>
<% end %>


<% if current_user.admin == true %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>