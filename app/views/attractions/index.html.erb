 <h1> Listing attractions</h1>
 <% @attractions.each do |attraction| %>
     <% if current_user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
     <% else %>
     <%= "#{attraction.name}" %>
     <% end %>
    
     <%= "#{attraction.tickets}" %>

     <% if current_user.admin == false %>
     <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
     <% end %>

  
  
     <%= link_to "See attractions", attraction_path(attraction) %>
     <% end %>
     
     <% if current_user.admin %>
    <p><%= link_to "New Attraction", new_attraction_path%></p>
    <% end %>
    